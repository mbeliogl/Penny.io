/* Session Expired Modal */
.session-expired-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  animation: fadeIn 0.2s ease;
}

.session-expired-modal {
  background: rgba(249, 250, 251, 0.98);
  border: 1px solid rgba(209, 213, 219, 0.8);
  border-radius: 16px;
  padding: 32px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(12px);
  max-width: 440px;
  width: 100%;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.95) translateY(-20px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.session-expired-modal__title {
  margin: 0 0 16px 0;
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
  text-align: center;
}

.session-expired-modal__message {
  margin: 0 0 32px 0;
  color: var(--text-tertiary);
  font-size: 0.95rem;
  line-height: 1.6;
  text-align: center;
}

.session-expired-modal__actions {
  display: flex;
  gap: 12px;
  align-items: center;
}

.session-expired-modal__cancel {
  flex: 1;
  padding: 12px 24px;
  background: transparent;
  border: 1px solid rgba(209, 213, 219, 0.8);
  border-radius: 8px;
  color: var(--text-tertiary);
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.session-expired-modal__cancel:hover:not(:disabled) {
  background: rgba(243, 244, 246, 0.8);
  border-color: rgba(156, 163, 175, 0.8);
  color: #374151;
}

.session-expired-modal__cancel:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.session-expired-modal__actions .wallet-connect-button {
  flex: 1;
}

@media (max-width: 600px) {
  .session-expired-modal {
    padding: 24px;
  }

  .session-expired-modal__title {
    font-size: 1.25rem;
  }

  .session-expired-modal__message {
    font-size: 0.9rem;
    margin-bottom: 24px;
  }

  .session-expired-modal__actions {
    flex-direction: column;
  }

  .session-expired-modal__cancel,
  .session-expired-modal__actions .wallet-connect-button {
    width: 100%;
  }
}
