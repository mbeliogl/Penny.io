.plusButton {
  --plus_sideLength: 2rem;
  --plus_borderColor: rgba(26, 26, 26, 0.1);
  --plus_backgroundColor: #f8f9fa;
  --plus_hoverBackgroundColor: rgba(26, 26, 26, 0.08);
  --plus_hoverBorderColor: rgba(26, 26, 26, 0.12);
  --plus_iconColor: #0f172a;
  --plus_iconHoverColor: #0f172a;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid var(--plus_borderColor);
  width: var(--plus_sideLength);
  height: var(--plus_sideLength);
  background-color: var(--plus_backgroundColor);
  overflow: hidden;
  border-radius: 10px;
  transition: all 0.2s ease;
}

.plusButton::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(26, 26, 26, 0.05), transparent);
  transition: left 0.5s ease;
}

.plusButton:hover,
.plusButton:focus-visible {
  cursor: pointer;
  background-color: var(--plus_hoverBackgroundColor, var(--plus_backgroundColor));
  border-color: var(--plus_hoverBorderColor, var(--plus_borderColor));
}

.plusButton:active {
  transform: scale(0.92);
}

.plusButton:hover::before,
.plusButton:focus-visible::before {
  left: 100%;
}

.plusIcon {
  color: var(--plus_iconColor);
  stroke: var(--plus_iconColor);
  fill: none;
  width: calc(var(--plus_sideLength) * 0.7);
  height: calc(var(--plus_sideLength) * 0.7);
  z-index: 1;
  transition: transform 0.2s ease, color 0.2s ease, stroke 0.2s ease;
}

.plusIcon > * {
  stroke: currentColor;
}

.plusButton:hover .plusIcon,
.plusButton:focus-visible .plusIcon {
  color: var(--plus_iconHoverColor, var(--plus_iconColor));
  stroke: var(--plus_iconHoverColor, var(--plus_iconColor));
  transform: rotate(180deg);
}

