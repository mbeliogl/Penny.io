@media (max-width: 900px) {
  .editor-body {
    grid-template-columns: 48px 1fr;
  }

  .editor-content {
    padding: 24px 20px 36px;
  }

  .editor-toolbar {
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .editor-toolbar-right {
    width: 100%;
    justify-content: space-between;
    flex-wrap: wrap;
  }
}

@media (max-width: 640px) {
  .editor-window {
    border-radius: 20px;
  }

  .editor-chrome {
    flex-wrap: wrap;
  }

  .editor-toolbar-left button,
  .editor-toolbar-center button {
    padding: 4px 8px;
  }

  .editor-placeholder {
    flex-direction: column;
    align-items: flex-start;
  }
}

@keyframes caretBlink {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes cuePulse {
  0% {
    transform: scale(1);
    opacity: 0.7;
  }
  50% {
    transform: scale(1.1);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0.7;
  }
}

@keyframes textReveal {
  0% {
    opacity: 0;
    transform: translateY(12px);
    clip-path: inset(0 100% 0 0 round 2px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
    clip-path: inset(0 0 0 0 round 2px);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(14px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (prefers-reduced-motion: reduce) {
  .editor-block,
  .editor-placeholder,
  .editor-cta-button,
  .editor-scroll-cue {
    animation: none;
    transition: none;
  }

  .typed-caret {
    animation: none;
  }
}
