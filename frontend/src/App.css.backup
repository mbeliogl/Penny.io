  justify-content: center;
  flex-shrink: 0;
}

.table-cell.actions .action-btn {
  width: 40px;
  height: 40px;
  min-width: 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s;
  position: relative;
  overflow: hidden;
  text-decoration: none;
  font-size: 0;
  flex-shrink: 0;
}

.table-cell.actions .action-btn:hover {
  overflow: visible;
}

.table-cell.actions .action-btn:active {
  transform: scale(0.98);
}

.table-cell.actions .action-btn svg {
  width: 18px;
  height: 18px;
  transition: all 0.2s;
  color: #64748b;
  stroke-width: 2;
}

.table-cell.actions .edit-btn:hover {
  background-color: var(--text-primary);
}

.table-cell.actions .edit-btn:hover svg {
  color: #fff;
}

.table-cell.actions .publish-action-btn:hover {
  background-color: var(--text-primary);
}

.table-cell.actions .publish-action-btn:hover svg {
  color: #fff;
}

.table-cell.actions .delete-btn:hover {
  background-color: rgb(237, 56, 56);
}

.table-cell.actions .delete-btn:hover svg {
  color: #fff;
}

.table-cell.actions .publish-action-btn:disabled {
  cursor: not-allowed;
  opacity: 0.45;
  background-color: transparent;
}

.table-cell.actions .publish-action-btn:disabled svg {
  color: #cbd5f5;
}

.article-title-link {
  color: inherit;
  text-decoration: none;
  transition: all 0.2s ease;
}

.article-title-link:hover .article-title {
  color: #4a5568;
  text-decoration: none;
