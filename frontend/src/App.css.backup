  transition: border-color 200ms ease, transform 200ms ease, box-shadow 200ms ease, background 200ms ease;
  cursor: pointer;
  box-shadow: 0 10px 24px rgba(15, 23, 42, 0.04);
}

.hero-flow-step > div {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.hero-flow-step.active,
.hero-flow-step:hover {
  border-color: #111827;
  background: #f8fafc;
  transform: translateY(-4px);
  box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
}

.hero-flow-step span {
  color: var(--text-tertiary);
  font-size: 0.9rem;
}

.hero-flow-index {
  width: 28px;
  height: 28px;
  border-radius: 999px;
  border: 1px solid #d1d5db;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 0.85rem;
  font-weight: 600;
  color: #1f2937;
  background: #f8fafc;
}

.hero-flow-title {
  font-size: 1rem;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 4px;
}

.hero-flow-time {
  font-size: 0.85rem;
  font-weight: 600;
  color: #1f2937;
  letter-spacing: 0.08em;
}

.hero-stat-board {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 16px;
}

.hero-stat-card {
  display: flex;
  gap: 12px;
  padding: 16px;
  background: var(--bg-primary);
  border: 1px solid #e5e7eb;
  border-radius: 16px;
  transition: transform 250ms ease, border-color 250ms ease, background 250ms ease;
  box-shadow: 0 10px 25px rgba(15, 23, 42, 0.06);
}

.hero-stat-card:hover,
.hero-stat-card:focus-within {
  transform: translateY(-4px);
  border-color: #1f2937;
  background: #f8fafc;
}

.hero-stat-icon {
  width: 36px;
  height: 36px;
  border-radius: 12px;
  background: #f4f4f5;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: #0f172a;
}

.hero-stat-label {
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  color: var(--text-tertiary);
  margin-bottom: 4px;
}

.hero-stat-value {
  font-size: 1rem;
  margin: 0;
  color: #0f172a;
}

.hero-trust-rainbow {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 12px;
}

.hero-trust-rainbow span {
  font-size: 0.85rem;
  padding: 6px 12px;
  border: 1px solid #e5e7eb;
  border-radius: 999px;
  color: #1f2937;
  background: #f8fafc;
}

.hero-video-shell {
  position: relative;
  border-radius: 24px;
  padding: 32px;
  background: var(--bg-primary);
  border: 1px solid #e5e7eb;
  overflow: hidden;
  min-height: 320px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8px;
  box-shadow: inset 0 0 0 1px rgba(15, 23, 42, 0.02);
}

.video-card-glow {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at 40% 30%, rgba(15, 23, 42, 0.08), transparent 60%);
  filter: blur(40px);
  opacity: 0.8;
}

.whitepaper-video-card p {
  font-size: 0.9rem;
  color: var(--text-tertiary);
  margin: 0;
}

.whitepaper-video-card h3 {
  font-size: 1.5rem;
  color: #0f172a;
  margin: 0;
  z-index: 1;
}

.video-card-actions {
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.video-card-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  border-radius: 12px;
  border: 1px solid #d1d5db;
  background: #f8fafc;
  color: #0f172a;
  font-weight: 600;
  width: fit-content;
  cursor: not-allowed;
  opacity: 0.85;
}

.video-card-note {
  font-size: 0.85rem;
  color: var(--text-tertiary);
}

.hero-scroll-cue {
  margin-top: 32px;
  padding-top: 16px;
  border-top: 1px solid #e5e7eb;
  text-align: center;
  color: #4b5563;
  font-size: 0.95rem;
}

.narrative-section {
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 28px;
  padding: 8px;
  border: 1px solid #e5e7eb;
  color: #0f172a;
  margin-bottom: 64px;
}

.narrative-stack {
  display: flex;
  flex-direction: column;
  gap: 32px;
  padding: 32px;
}

.narrative-impact {
  margin-top: 24px;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 12px;
}

.narrative-impact-card {
  border: 1px dashed #d1d5db;
  border-radius: 18px;
  padding: 16px;
  background: var(--bg-primary);
  display: flex;
  flex-direction: column;
  gap: 4px;
  box-shadow: 0 6px 18px rgba(15, 23, 42, 0.04);
}

.narrative-impact-card p {
  margin: 0;
  font-size: 0.85rem;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  color: var(--text-tertiary);
}

.narrative-impact-card strong {
  font-size: 1.1rem;
  color: #0f172a;
}

.narrative-section .whitepaper-content h2 {
  border-top: none;
  margin-top: 8px;
  color: #0f172a;
}

.narrative-intro p,
.narrative-intro li {
  color: #4b5563;
}

.narrative-intro ul {
  padding-left: 18px;
}

.narrative-marquee {
  background: var(--bg-primary);
  border-radius: 24px;
  border: 1px solid #e5e7eb;
  padding: 20px;
  overflow: hidden;
  box-shadow: inset 0 0 0 1px rgba(15, 23, 42, 0.02), 0 15px 35px rgba(15, 23, 42, 0.05);
}

.narrative-marquee-track {
  display: flex;
  gap: 16px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  padding-bottom: 8px;
}

.narrative-marquee-track::-webkit-scrollbar {
  height: 6px;
}

.narrative-marquee-track::-webkit-scrollbar-thumb {
  background: rgba(15, 23, 42, 0.2);
  border-radius: 999px;
}

.narrative-card {
  border: 1px solid #e5e7eb;
  color: inherit;
  background: var(--bg-primary);
  border-radius: 20px;
  text-align: left;
  padding: 20px;
  display: flex;
  gap: 16px;
  transition: border-color 200ms ease, transform 200ms ease, background 200ms ease;
  cursor: pointer;
  box-shadow: 0 10px 25px rgba(15, 23, 42, 0.04);
  min-width: 260px;
  scroll-snap-align: start;
}

.narrative-card:focus-visible {
  outline: 2px solid rgba(15, 23, 42, 0.8);
  outline-offset: 2px;
}

.narrative-card.active,
.narrative-card:hover {
  border-color: #111827;
  background: #f8fafc;
  transform: translateX(4px);
}

.narrative-card h3 {
  margin: 0 0 10px;
  color: #0f172a;
  font-size: 1.15rem;
}

.narrative-card p {
  margin: 0 0 12px;
  color: #4b5563;
}

.narrative-index {
  font-size: 0.9rem;
  letter-spacing: 0.08em;
  color: #9ca3af;
  margin-top: 4px;
}

.narrative-stat {
  font-size: 0.9rem;
  color: #0f172a;
  font-weight: 600;
}

.narrative-diagram {
  display: flex;
  align-items: center;
  gap: 16px;
  background: #f8fafc;
  border: 1px dashed #d1d5db;
  border-radius: 18px;
  padding: 20px;
  font-size: 0.95rem;
  color: #0f172a;
}

.narrative-diagram-node {
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 120px;
}

.narrative-diagram-node p {
  margin: 0;
  font-weight: 600;
}

.narrative-diagram-node span {
  color: var(--text-tertiary);
  font-size: 0.9rem;
}

.narrative-diagram-connector {
  flex: 1;
  height: 1px;
  background: linear-gradient(90deg, rgba(15, 23, 42, 0), rgba(15, 23, 42, 0.5), rgba(15, 23, 42, 0));
  position: relative;
}

.narrative-diagram-connector::after {
  content: '';
  position: absolute;
  right: 0;
  top: -5px;
  width: 10px;
  height: 10px;
  border-radius: 999px;
  background: #111827;
}

.narrative-diagram--full {
  flex-wrap: wrap;
}

.narrative-diagram-note {
  margin-left: auto;
  padding: 12px 18px;
  border-radius: 16px;
  background: var(--bg-primary);
  border: 1px solid #e5e7eb;
  box-shadow: 0 10px 20px rgba(15, 23, 42, 0.05);
}

.narrative-diagram-note p {
  margin: 0;
  font-weight: 600;
  color: #111827;
}

.narrative-diagram-note span {
  color: #4b5563;
  font-size: 0.9rem;
}

/* Table of Contents */
.toc-section {
  background: #f9fafb;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 32px;
  margin: 40px 0;
}

.toc-section h2 {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 20px 0;
}

.toc {
  font-size: 1rem;
  line-height: 2;
}

.toc-placeholder {
  color: var(--text-tertiary);
  font-style: italic;
  margin: 0;
}

/* Whitepaper Content Sections */
.whitepaper-section {
  margin-bottom: 60px;
}

.whitepaper-content {
  max-width: 900px;
  margin: 0 auto;
  padding: 40px 0;
}

.whitepaper-content h2 {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 48px 0 24px 0;
  padding-top: 24px;
  border-top: 2px solid #e5e7eb;
}

.whitepaper-content h2:first-child {
  margin-top: 0;
  padding-top: 0;
  border-top: none;
}

.whitepaper-content h3 {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 32px 0 16px 0;
}

.whitepaper-content h4 {
  font-size: 1.25rem;
  font-weight: 600;
  color: #374151;
  margin: 24px 0 12px 0;
}

.whitepaper-content p {
  font-size: 1.125rem;
  line-height: 1.8;
  color: #374151;
  margin-bottom: 20px;
}

.whitepaper-content ul,
.whitepaper-content ol {
  font-size: 1.125rem;
  line-height: 1.8;
  color: #374151;
  margin: 20px 0;
  padding-left: 32px;
}

.whitepaper-content li {
  margin-bottom: 12px;
}

.whitepaper-content strong {
  font-weight: 600;
  color: var(--text-primary);
}

.whitepaper-content em {
  font-style: italic;
}

.whitepaper-content a {
  color: var(--text-primary);
  text-decoration: underline;
  transition: color 0.2s ease;
}

.whitepaper-content a:hover {
  color: #4a4a4a;
}

/* Code Blocks */
.code-block-container {
  margin: 32px 0;
  border-radius: 8px;
  overflow: hidden;
  border: 1px solid #e5e7eb;
}

.code-block-header {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  background: #f9fafb;
  border-bottom: 1px solid #e5e7eb;
  font-size: 0.875rem;
  font-weight: 600;
  color: #374151;
}

.code-block-header svg {
  color: var(--text-tertiary);
}

.code-block {
  background: #1a1a1a;
  color: #e5e7eb;
  padding: 20px;
  margin: 0;
  overflow-x: auto;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace;
  font-size: 0.875rem;
  line-height: 1.6;
}

.code-block code {
  font-family: inherit;
  color: inherit;
  background: none;
  padding: 0;
}

/* Inline code */
.whitepaper-content code {
  background: #f9fafb;
  color: var(--text-primary);
  padding: 2px 6px;
  border-radius: 4px;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', 'source-code-pro', monospace;
  font-size: 0.9em;
  border: 1px solid #e5e7eb;
}

/* Diagrams and Images */
.diagram-container {
  margin: 40px 0;
  border: 2px dashed #d1d5db;
  border-radius: 12px;
  padding: 48px;
  background: #f9fafb;
}

.diagram-placeholder {
  text-align: center;
  color: var(--text-tertiary);
}

.diagram-placeholder svg {
  margin: 0 auto 16px;
  opacity: 0.5;
}

.diagram-placeholder p {
  font-size: 1.125rem;
  font-weight: 600;
  margin: 0 0 8px 0;
  color: #374151;
}

.diagram-placeholder span {
  font-size: 0.875rem;
  color: #9ca3af;
}

.whitepaper-content img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 32px 0;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

/* Download Section */
.download-section {
  margin-top: 80px;
  padding-top: 40px;
  border-top: 2px solid #e5e7eb;
}

.download-card {
  max-width: 500px;
  margin: 0 auto;
  padding: 32px;
  background: linear-gradient(135deg, #f9fafb 0%, #ffffff 100%);
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
}

.download-card svg {
  color: var(--text-primary);
  margin-bottom: 16px;
}

.download-card h3 {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 12px 0;
}

.download-card p {
  font-size: 1rem;
  color: var(--text-tertiary);
  margin: 0 0 24px 0;
  line-height: 1.6;
}

.download-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 24px;
  background: #1a1a1a;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.download-button:not(:disabled):hover {
  background: #2a2a2a;
  transform: translateY(-1px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.download-button:disabled {
  background: #d1d5db;
  cursor: not-allowed;
}

.download-button svg {
  width: 16px;
  height: 16px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .whitepaper-hero {
    padding: 32px 24px;
  }

  .hero-canvas {
    padding: 16px;
    min-height: auto;
  }

  .hero-core {
    padding: 24px;
  }

  .hero-core-body {
    grid-template-columns: 1fr;
  }

  .hero-flow-ribbon {
    order: 2;
  }

  .hero-orbit {
    display: none;
  }

  .hero-mobile-stats {
    display: grid;
  }

  .hero-trust-rainbow span {
    font-size: 0.75rem;
  }

  .whitepaper-video-card {
    min-height: 240px;
  }

  .narrative-section {
    padding: 0;
    border-radius: 20px;
  }

  .narrative-stack {
    padding: 24px;
  }

  .narrative-card {
    flex-direction: column;
    align-items: flex-start;
  }

  .narrative-index {
    margin-bottom: 8px;
  }

  .whitepaper-content {
    padding: 20px 0;
  }

  .whitepaper-content h2 {
    font-size: 1.5rem;
    margin: 32px 0 16px 0;
  }

  .whitepaper-content h3 {
    font-size: 1.25rem;
  }

  .whitepaper-content p,
  .whitepaper-content ul,
  .whitepaper-content ol {
    font-size: 1rem;
  }

  .code-block {
    font-size: 0.75rem;
    padding: 16px;
  }

  .diagram-container {
    padding: 32px 16px;
  }

  .download-card {
    padding: 24px;
  }

  .toc-section {
    padding: 24px 16px;
  }

  .narrative-diagram {
    flex-direction: column;
    align-items: flex-start;
  }

  .narrative-diagram-connector {
    width: 100%;
    height: 1px;
  }

  .narrative-diagram--full {
    gap: 12px;
  }
}

@media (prefers-reduced-motion: reduce) {
  .hero-stat-card,
  .narrative-card,
  .hero-flow-step,
  .hero-orbit {
    transition: none;
  }

  .hero-stat-card:hover,
  .hero-stat-card:focus-within,
  .hero-orbit,
  .hero-flow-step.active,
  .hero-flow-step:hover,
  .narrative-card.active,
  .narrative-card:hover {
    transform: none;
  }
}

/* ============================================
   Whitepaper Editor Layout
   ============================================ */

.whitepaper-page {
  width: 100%;
  min-height: calc(100vh - 64px);
  background: radial-gradient(circle at 8% 10%, rgba(148, 163, 184, 0.25), transparent 55%),
    radial-gradient(circle at 90% 0%, rgba(148, 163, 184, 0.18), transparent 55%),
    #f4f5f7;
}

.whitepaper-editor {
  display: flex;
  flex-direction: column;
  gap: 48px;
  align-items: stretch;
  padding: 64px 16px 0;
}

.editor-window {
  max-width: 1100px;
  margin: 0 auto;
  border-radius: 36px;
  border: 1px solid rgba(148, 163, 184, 0.35);
  background: var(--bg-primary);
  box-shadow: 0 60px 120px rgba(15, 23, 42, 0.15);
  overflow: hidden;
}

.editor-chrome {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18px 28px;
  border-bottom: 1px solid #e5e7eb;
  background: linear-gradient(120deg, rgba(241, 245, 249, 0.8), rgba(255, 255, 255, 0.95));
}

.editor-dots {
  display: flex;
  gap: 8px;
}

.editor-dots span {
  width: 12px;
  height: 12px;
  border-radius: 999px;
  background: rgba(148, 163, 184, 0.5);
}

.editor-dots span:nth-child(1) {
  background: #ef4444;
}

.editor-dots span:nth-child(2) {
  background: #facc15;
}

.editor-dots span:nth-child(3) {
  background: #22c55e;
}

.editor-filename {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-weight: 600;
  color: #0f172a;
}

.editor-status {
  font-size: 0.85rem;
  color: #475569;
}

.editor-toolbar {
  display: grid;
  grid-template-columns: auto 1fr auto;
  align-items: center;
  padding: 12px 24px;
  border-bottom: 1px solid #e5e7eb;
  background: #f8fafc;
  font-size: 0.9rem;
  color: #475569;
  gap: 16px;
  position: relative;
}

.editor-toolbar-left,
.editor-toolbar-center {
  display: inline-flex;
  align-items: center;
  gap: 10px;
}

.editor-toolbar-left button,
.editor-toolbar-center button {
  border: 1px solid rgba(148, 163, 184, 0.4);
  background: #fff;
  color: #0f172a;
  padding: 6px 12px;
  border-radius: 10px;
  font-weight: 600;
  font-size: 0.85rem;
  display: inline-flex;
  align-items: center;
  gap: 6px;
  cursor: pointer;
  transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;
}

.editor-toolbar-left button:hover,
.editor-toolbar-center button:hover {
  background: #0f172a;
  color: #f8fafc;
  border-color: #0f172a;
}

.editor-toolbar-center button.is-active {
  background: #111827;
  color: #f8fafc;
  border-color: #111827;
}

.editor-toolbar-right {
  display: flex;
  align-items: center;
  gap: 12px;
}

.editor-toolbar-shortcut {
  font-family: 'SFMono-Regular', Consolas, monospace;
  font-size: 0.75rem;
  color: #94a3b8;
}

.editor-body {
  display: grid;
  grid-template-columns: 64px 1fr;
  min-height: 600px;
}

.editor-gutter {
  background: linear-gradient(180deg, rgba(226, 232, 240, 0.8), rgba(226, 232, 240, 0.4));
  border-right: 1px solid #e2e8f0;
  padding: 28px 12px;
  font-family: 'SFMono-Regular', Consolas, monospace;
  font-size: 0.75rem;
  color: #94a3b8;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.editor-gutter span {
  line-height: 1.2;
}

.editor-content {
  padding: 32px 40px 48px;
  background: linear-gradient(180deg, #ffffff 0%, #fbfbfc 100%);
}

.editor-content .editor-block:last-of-type {
  margin-bottom: 12px;
}


.editor-content .editor-block:last-of-type {
  margin-bottom: 12px;
}

.keep-reading-wrapper {
  display: flex;
  justify-content: center;
  margin: 12px 0 32px;
}

.keep-reading-button {
  border: 1px solid rgba(15, 23, 42, 0.2);
  background: #0f172a;
  color: #f8fafc;
  padding: 12px 24px;
  border-radius: 999px;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  font-size: 0.95rem;
  font-weight: 600;
  letter-spacing: 0.03em;
  cursor: pointer;
  box-shadow: 0 20px 45px rgba(15, 23, 42, 0.25);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.keep-reading-button:hover {
