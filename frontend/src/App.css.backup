  background: #10b981;
  color: var(--text-inverse);
  box-shadow: 0 6px 14px rgba(16, 185, 129, 0.35);
}

.success-share-trigger .btn-cssbuttons ul li button.copy-success:hover {
  background: #0d9c6d;
  box-shadow: 0 10px 20px rgba(16, 185, 129, 0.5);
}

.btn-cssbuttons ul li button svg {
  pointer-events: none;
}

.btn-cssbuttons:hover ul li button {
  transform: translateY(-10px) scale(0.95);
  box-shadow: 0 5px 14px rgba(0, 0, 0, 0.15);
}

.btn-cssbuttons ul li button:hover {
  opacity: 1;
  transform: translateY(-8px) scale(1.2);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.28);
  background: #f3f4f6;
}

.success-share-trigger .btn-cssbuttons:hover ul li button:hover {
  transform: translateY(-10px) scale(1.2);
  box-shadow: 0 14px 26px rgba(0, 0, 0, 0.32);
  transition-duration: 0.1s;
}

.btn-cssbuttons:hover::before {
  transform: scale(1.05);
}

.btn-cssbuttons:hover span,
.btn-cssbuttons:hover span span {
  transform: translateY(-55px);
}

.btn-cssbuttons:hover ul li button {
  transform: translateY(0) scale(0.95);
}

.btn-cssbuttons:hover ul li:nth-child(1) button {
  transition-delay: 0.05s;
}

.btn-cssbuttons:hover ul li:nth-child(2) button {
  transition-delay: 0.08s;
}

.btn-cssbuttons:hover ul li:nth-child(3) button {
  transition-delay: 0.11s;
}

.btn-cssbuttons:hover ul li:nth-child(4) button {
  transition-delay: 0.14s;
}

.btn-cssbuttons:hover ul li:nth-child(5) button {
  transition-delay: 0.17s;
}

.btn-cssbuttons:hover ul li button:hover {
  transition-delay: 0s !important;
}

