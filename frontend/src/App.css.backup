/* Like Button Component */
/* Like Button Keyframe Animations */
@keyframes heartBounce {
  0% {
    transform: scale(1);
  }
  25% {
    transform: scale(1.3);
  }
  50% {
    transform: scale(0.9);
  }
  75% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes likeButtonPress {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.95);
  }
  100% {
    transform: scale(1);
  }
}

.like-button {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 12px;
  border: 1px solid var(--border-light);
  border-radius: 20px;
  background: white;
  color: var(--text-tertiary);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
}

.like-button:hover:not(.like-button-disabled):not(.like-button-loading) {
  border-color: #ff6b6b;
  color: #ff6b6b;
  background-color: #fff5f5;
  transform: translateY(-1px);
}

.like-button:active:not(.like-button-disabled):not(.like-button-loading) {
  animation: likeButtonPress 0.3s ease;
  transform: translateY(0);
}

.like-button-liked {
  border-color: #ff6b6b;
  color: #ff6b6b;
  background-color: #fff5f5;
}

.like-button-liked svg {
  animation: heartBounce 0.5s ease;
}

.like-button-liked:hover {
  border-color: #e53e3e;
  color: #e53e3e;
  background-color: #fed7d7;
}

.like-button-disabled {
  cursor: not-allowed;
  opacity: 0.6;
}

.like-button-loading {
  cursor: not-allowed;
  opacity: 0.7;
}

.like-button svg {
  flex-shrink: 0;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.like-button:hover:not(.like-button-disabled):not(.like-button-loading) svg {
  transform: scale(1.1);
}

